                IsUnit = true,
                Children = new List<PartNode>
                {
                    new PartNode { PartId = "10", PartNumber = "CB-1234", PartName = "ケーブル", Quantity = 4, Unit = "本", Manufacturer = "オムロン", Material = "PVC", Model = "XS3F-M421-402-A", Specification = "2m", Remarks = "", Level = 1 }
                }
            }
        };
        
        // 子部品の親参照を設定
        foreach (var parent in hierarchyParts.Where(p => p.HasChildren))
        {
            foreach (var child in parent.Children)
            {
                child.Parent = parent;
                child.Level = parent.Level + 1;
            }
            parent.ChildrenLoaded = true;
        }
    }
    
    private async Task LoadChildParts(PartNode node)
    {
        // 子部品の遅延読み込み（APIから取得）
        // 現在はサンプルデータなので、既に読み込み済み
        await Task.Delay(100);
        node.ChildrenLoaded = true;
    }
} 