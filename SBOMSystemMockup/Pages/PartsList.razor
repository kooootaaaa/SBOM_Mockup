    // 展開/折りたたみロジック（ユニットの場合は常に動作）
    private async Task ToggleExpand(Part part)
    {
        Console.WriteLine($"ToggleExpand clicked: 部品ID={part.PartId}, 品番={part.PartNumber}, IsUnit={part.IsUnit}, Level={part.Level}, InstanceId={part.InstanceId}");
        Console.WriteLine($"  ChildrenLoaded={part.ChildrenLoaded}, IsLoading={part.IsLoading}, Children.Count={part.Children.Count}");
        
        // Level > 0の部品の場合、親部品の情報も出力
        if (part.Level > 0 && part.Parent != null)
        {
            Console.WriteLine($"  親部品: {part.Parent.PartNumber} (ID={part.Parent.PartId})");
        }
        
        // ユニットでない場合でも、展開可能マークがあれば展開する
        if (!part.IsUnit && part.Children.Count == 0 && part.ChildrenLoaded)
        {
            Console.WriteLine("  ユニットではなく、子部品もないため、展開処理をスキップ");
            return;
        }
        
        if (!part.ChildrenLoaded && !part.IsLoading)
        {
            // 子部品を初めて取得する場合
            Console.WriteLine("  子部品を読み込み中...");
            await LoadChildParts(part);
        }
        else
        {
            // すでに取得済みの場合は展開状態を切り替え
            Console.WriteLine($"  展開状態を切り替え: {part.IsExpanded} → {!part.IsExpanded}");
            part.IsExpanded = !part.IsExpanded;
            UpdateDisplayParts();
        }
    }
    
    // 子部品を動的に取得（T_個体部品子部品サブから）
    private async Task LoadChildParts(Part part)
    {
        Console.WriteLine($"LoadChildParts開始: PartId={part.PartId}, Level={part.Level}, ChildrenLoaded={part.ChildrenLoaded}, IsLoading={part.IsLoading}");
        
        if (part.ChildrenLoaded || part.IsLoading)
        {
            Console.WriteLine($"  → スキップ: ChildrenLoaded={part.ChildrenLoaded}, IsLoading={part.IsLoading}");
            return;
        }

        part.IsLoading = true;
        StateHasChanged();

        try
        {
            Console.WriteLine($"LoadChildParts for 部品ID: {part.PartId}, 品番: {part.PartNumber}, Level: {part.Level}");
            Console.WriteLine($"allChildRelations keys count: {allChildRelations.Keys.Count}");
            Console.WriteLine($"allChildRelations keys: {string.Join(", ", allChildRelations.Keys.Take(10))}...");
            Console.WriteLine($"Checking key: {part.PartId}");
            
            // allChildRelationsから子部品を構築
            if (allChildRelations.ContainsKey(part.PartId))
            {
                Console.WriteLine($"Found children for part {part.PartId}");
                part.Children.Clear();
                
                foreach (var relationElement in allChildRelations[part.PartId])
                {
                    var childPartId = GetStringFromJsonElement(relationElement, "子部品コード");  // 文字列として取得
                    var childPartNumber = GetStringFromJsonElement(relationElement, "子品番");
                    var childUnitType = GetIntFromJsonElement(relationElement, "子ユニット種別");
                    var childOptionUnitFlag = GetIntFromJsonElement(relationElement, "子オプションユニットFL");
                    
                    Console.WriteLine($"  Processing child: ID={childPartId}, 品番={childPartNumber}, ユニット種別={childUnitType}");
                    
                    // 各子部品に一意のインスタンスIDを生成（親のPartId + 連番）
                    var uniqueInstanceId = $"{part.PartId}_{part.Children.Count}_{childPartId}";
                    
                    var childPart = new Part
                    {
                        PartId = childPartId,  // 元の部品IDを保持
                        InstanceId = uniqueInstanceId,  // 一意のインスタンスID
                        PartNumber = childPartNumber,
                        PartName = GetStringFromJsonElement(relationElement, "子品名"),
                        Quantity = Math.Max(1, GetIntFromJsonElement(relationElement, "個数")),
                        Manufacturer = GetStringFromJsonElement(relationElement, "子メーカー"),
                        Material = GetStringFromJsonElement(relationElement, "子材質"),
                        Model = GetStringFromJsonElement(relationElement, "子型式"),
                        Remarks = GetStringFromJsonElement(relationElement, "子備考"),
                        UnitType = childUnitType,
                        OptionUnitFlag = childOptionUnitFlag,
                        IsUnit = childUnitType > 0,
                        IsOptionUnit = childOptionUnitFlag != 0,
                        Level = part.Level + 1,
                        Parent = part,
                        ChildrenLoaded = false  // 初期値は常にfalse
                    };
                    
                    // ユニットまたは子部品を持つ場合は展開可能
                    if (childPart.IsUnit || allChildRelations.ContainsKey(childPart.PartId))
                    {
                        childPart.ChildrenLoaded = false; // 展開可能
                        Console.WriteLine($"    → 展開可能（ユニットまたは孫部品あり）");
                    }
                    else
                    {
                        childPart.ChildrenLoaded = true; // 展開不可
                    }
                    
                    part.Children.Add(childPart);
                    Console.WriteLine($"  子部品追加: {childPart.PartNumber}, IsUnit={childPart.IsUnit}, UnitType={childUnitType}, ChildrenLoaded={childPart.ChildrenLoaded}, Level={childPart.Level}, PartId={childPart.PartId}");
                }
                
                Console.WriteLine($"子部品数: {part.Children.Count}");
            }
            else
            {
                Console.WriteLine($"No children found for part {part.PartId} in allChildRelations");
                // ユニットの場合でも子部品がない場合は空のリストを設定
                part.Children.Clear();
            }

            part.IsExpanded = true;
            part.ChildrenLoaded = true;
            UpdateDisplayParts();
            Console.WriteLine($"LoadChildParts完了: IsExpanded={part.IsExpanded}, ChildrenLoaded={part.ChildrenLoaded}, 子部品数={part.Children.Count}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"子部品読み込みエラー: {ex.Message}");
        }
        finally
        {
            part.IsLoading = false;
            StateHasChanged();
        }
    }
    
    private void OnPageSizeChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int newPageSize))
        {
            pageSize = newPageSize;
            currentPage = 1;
            StateHasChanged();
        }
    }
    
    private void GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
            StateHasChanged();
        }
    }
    
