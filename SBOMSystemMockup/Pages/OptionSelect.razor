@page "/machine/{MachineId}/optionselect"
@using Microsoft.AspNetCore.Components

<PageTitle>オプション選択</PageTitle>

<h1>オプション選択 <span class="text-muted fs-5">(@MachineId)</span></h1>

<div class="mb-3">
    <div>型式: <b>A-100</b></div>
    <div>利用可能なオプション:</div>
    <div>
        <label><input type="checkbox" /> 高耐久仕様</label><br />
        <label><input type="checkbox" /> 省エネモード</label><br />
        <label><input type="checkbox" /> 防水カバー</label>
    </div>
</div>

<div>
    <button class="btn btn-primary me-2">オプション選択確定</button>
    <a class="btn btn-secondary" href="/machine/@MachineId/partsfetch">閉じる</a>
</div>

@code {
    [Parameter] public string? MachineId { get; set; }
} 